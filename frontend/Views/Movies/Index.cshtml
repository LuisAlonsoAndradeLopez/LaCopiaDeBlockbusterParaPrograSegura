@model List<Movie>
@{
    ViewData["Title"] = "Películas";
    ViewData["SubTitle"] = "Lista";
    var imagesDataUrls = ViewBag.ImagesDataUrls as List<string>;
}

@section Scripts {
    <script>
        function openDeleteMovieDesitionAlert() {
            if (confirm('¿Keres eliminar esta peli?')) {
                fetch(`/Movies/Delete/${movieId}`)
                .then(response => {
                    if (response.ok) {
                        alert('Película borrada exitosamente.');
                        window.location.href = '/Movies/Index';
                    } else {
                        throw new Error('Error en la eliminación.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('No se pudo borrar la película. Inténtelo nuevamente.');
                });
            }
        }
    </script>
}

<div class="row small">
    <div style="background-color: #003088;">
        <form asp-action="Index" method="get">
            <div class="input-group input-group-sm mb-3 col">
                @if (ViewBag.OnlyAdmin == true)
                {
                    <h2 class="col-6" style="margin-top: 16px;">Películas</h2>
                    <button class="col-2 btn btn-danger" asp-action="Make" title="Crear nuevo"
                        style="margin-top: 18px; margin-right: 50px;">Registrar nueva película
                    </button>
                    <input name="s" id="find-movie-by-title-text-input" value="@ViewBag.search" type="search"
                        class="form-control" placeholder="Buscar por título" style="margin-top: 16px;">
                    <button class="btn btn-danger" type="submit" title="Buscar" style="margin-top: 16px;"><i
                            class="bi bi-search"></i></button>
                }
                else
                {
                    <h2 class="col-9" style="margin-top: 16px;">Películas</h2>
                    <button class="col-2 btn btn-danger" asp-action="Make" title="Crear nuevo"
                        style="margin-top: 18px; margin-right: 50px;">Registrar nueva película
                    </button>
                    <input name="s" id="find-movie-by-title-text-input" value="@ViewBag.search" type="search"
                        class="form-control" placeholder="Buscar por título" style="margin-top: 16px;">
                    <button class="btn btn-danger" type="submit" title="Buscar" style="margin-top: 16px;"><i
                            class="bi bi-search"></i></button>
                }
            </div>
        </form>
    </div>
</div>
<div class="row text-center mb-3" style="margin-top: 16px;">
    <div class="col text-mid ">
        Mostrando @Model.Count() películas.
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="table-responsive" style="margin: 0px;">
        @foreach (var item in Model)
        {
            <div class="row" style="background-color: #0f0f0f; margin: 0px;">
                <img src='@((item.Poster == null) ? "https://via.placeholder.com/27x40": item.Poster)' class="col"
                    style="margin: 20px; margin-left: 10px; height: 160px; width: 130px;">
                <div class="col">
                    <h5 style="margin-top: 20px; text-align: center;">@item.Title</h5>
                    <h5 style="margin-top: 20px; text-align: center;">@item.Year</h5>
                </div>
                <p class="col" style="margin-top: 20px;">@item.Synopsis</p>
                <div class="col">
                    <h5 style="margin: 20px; text-align: center;">Categorias</h5>
                    @foreach (var cat in item.Categories!)
                    {
                        <h5 style="margin: 20px; text-align: center;">@cat.Name</h5>
                    }
                    @if (ViewBag.OnlyAdmin == true)
                    {
                    }
                </div>
                <div class="col" style="margin-top: 10px;">
                    <a class="btn btn-danger btn-lg mx-auto" asp-action="Edit" asp-route-id="@item.MovieId"
                        style="margin: 20px;">Modificar</a>
                    <a class="btn btn-danger btn-lg mx-auto" onclick="openDeleteMovieDesitionAlert()"
                        style="margin: 20px;">Eliminar</a>
                </div>
            </div>
        }
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
}
else
{
    <div class="mt-5">
        <div class="alert alert-warning" role="alert">
            No se han encontrado elementos. Intentelo de nuevo más tarde.
        </div>
    </div>
}
