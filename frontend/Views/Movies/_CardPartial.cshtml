@model Movie
@{
    var imageDataUrl = ViewBag.ImageDataUrl as string;
}

<div class="card mt-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src='@imageDataUrl' class="img-fluid img-thumbnail mt-2 ms-2" style="max-height: 300px;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="mb-3 ps-3">
                    <label class="form-label form-text">Título</label>
                    <div class="form-text text-body">@Model.Title</div>
                </div>
                <div class="mb-3 ps-3">
                    <label class="form-label form-text">Año</label>
                    <div class="form-text text-body">@Model.Year</div>
                </div>
                <div class="mb-3 ps-3">
                    <label class="form-label form-text">Sinópsis</label>
                    <div class="form-text text-body">@Model.Synopsis</div>
                </div>
            </div>
        </div>
    </div>
</div>