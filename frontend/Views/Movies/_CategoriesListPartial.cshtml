@model List<Category>

<div class="row small mb-3">
    <div class="col" style="margin-top: 20px;">
        <a class="btn btn-danger btn-lg mx-auto" asp-action="AddCategory" asp-route-id='@ViewData["MovieId"]'
            title="Crear nuevo">Agregar Categor√≠a</a>
    </div>
    <div class="col text-end" style="margin-top: 35px;">
        Mostrando @Model.Count() elementos
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered small">
            <thead class="text-center">
                <tr style="border-color: #000000;">
                    <th style="background-color: #00175e;">
                        Id
                    </th>
                    <th style="background-color: #00175e;">
                        Nombre
                    </th>
                    <th style="background-color: #00175e;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-color: #000000;">
                        <td class="text-center" style="background-color: #000b2b;">
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td class="text-center" style="background-color: #000b2b;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td width="1" style="background-color: #000b2b;">
                            <a class="btn btn-danger btn-sm" asp-action="DeleteCategory"
                                asp-route-id="@item.CategoryId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-2">
        <div class="alert alert-warning small" role="alert">
            No se han encontrado elementos.
        </div>
    </div>
}