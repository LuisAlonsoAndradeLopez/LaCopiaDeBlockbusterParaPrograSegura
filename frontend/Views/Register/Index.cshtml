@model UserPwd
@{
    ViewData["Title"] = "Registro de usuario";
}

<form asp-action="CheckMail">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="h3 text-center text-secondary-emphasis">Regístrate en Blockbuster</h1>
            <h5 class="card-card-title text-center mt-4">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Nombre" maxlength="30">
                <label asp-for="Name" class="form-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Correo" maxlength="25">
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password" maxlength="20">
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <p class="card-text small">Ingrese sus datos para registrarse en la plataforma.</p>
        </div>
        
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Continuar</button> 
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
