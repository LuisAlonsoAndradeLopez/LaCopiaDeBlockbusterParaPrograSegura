@model Register
@{
    ViewData["Title"] = "Registro de usuario";
}

<form asp-action="Index">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="h3 text-center text-secondary-emphasis">Regístrate en Blockbuster</h1>
            <h5 class="card-card-title text-center mt-4">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                <label asp-for="Nombre" class="form-label"></label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="NombreUsuario" class="form-control" placeholder="Nombre de usuario">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Correo">
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password">
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <p class="card-text small">Ingrese sus datos para registrarse en la plataforma.</p>
        </div>
        
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Continuar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
